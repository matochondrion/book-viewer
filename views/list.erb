<html>
  <body>
    <h1>Files in Home Directory</h1>

    <ul>
      <% @files.each do |file| %>
        <li>
          <a href="<%= file %>"><%= file %></a>
        </li>
      <% end %>
    </ul>

    <p>
    <% if params[:sort] == 'desc' %>
      <a href='/list'>Sort Ascending</a>
    <% else %>
      <a href='/list?sort=desc'>Sort Descending</a>
    <% end %>

  </body>
</html>

